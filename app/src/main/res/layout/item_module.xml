<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_version_item"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_version_item_white"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:padding="16dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tvModule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Core"
                android:textSize="25sp"
                android:textColor="@color/colorPrimary"/>

        <TextView
                android:id="@+id/tvPackage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="core-ktx"
                android:textSize="17sp"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/tvLatestRelease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Latest release: "
                android:textSize="14sp"
                android:layout_marginTop="10dp"/>

        <TextView
                android:id="@+id/tvLatestStableRelease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Latest stable release: "
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>

    </LinearLayout>


</RelativeLayout>